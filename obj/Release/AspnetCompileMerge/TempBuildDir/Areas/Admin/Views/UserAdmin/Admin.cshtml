<h2>Make user to administrator</h2>
@using (Html.BeginForm("Admin", "UserAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <label class="col-md-2 control-label">Username</label>
        <div class="col-md-10">
            <input type="text" name="username" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Make!" />
        </div>
    </div>
}